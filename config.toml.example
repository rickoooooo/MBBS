[main]
activate_keyword = "bbs"
radio_channel = 1
log_level = "DEBUG"

[interface_mesh_tcp]
radio_ip = "192.168.70.105"

[interface_mesh_serial]
#serial_device = "/dev/ttyACM0"

[interface_tcp_server]
tcp_server_port = 5050
tcp_server_ip = "127.0.0.1"

[auth]
database = "user.db"
username_min_length = 5
username_max_length = 30

[bbs]
database = "bbs.db"

[messages]
border_top = "===================="
border_bottom = "===================="

[sessions]
timeout = 300

[guestbook]
